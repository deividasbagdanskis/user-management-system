{% extends 'base.html.twig' %}

{% block title %}User | User manager{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-3">User</h1>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Id</dt>
            <dd class="col-sm-10">{{ user.id }}</dd>
            <dt class="col-sm-2">Username</dt>
            <dd class="col-sm-10">{{ user.username }}</dd>
            <dt class="col-sm-2">Groups</dt>
            <dd class="col-sm-10">
                {% for group in user.groups %}
                    <a href="{{ path('groups-show', {'id': group.id}) }}">{{ group.name }}</a><br/>
                {% endfor %}
            </dd>
        </dl>
        <a href="{{ path('users-index') }}">back to list</a>
        <a href="{{ path('users-edit', {'id': user.id}) }}">edit</a>
        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
