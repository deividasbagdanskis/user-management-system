{% extends 'base.html.twig' %}

{% block title %}Group | User manager{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-3">Group</h1>
    <hr />
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">{{ group.id }}</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">{{ group.name }}</dd>
        <dt class="col-sm-2">Users</dt>
        <dd class="col-sm-10">
            {% for user in group.users %}
                <a href="{{ path('users-show', {'id': user.id}) }}">{{ user.username }}</a><br/>
            {% endfor %}
        </dd>
    </dl>
    <a href="{{ path('groups-index') }}">back to list</a>

    <a href="{{ path('groups-edit', {'id': group.id}) }}">edit</a>

    {{ include('group/_delete_form.html.twig') }}
</div>
{% endblock %}
